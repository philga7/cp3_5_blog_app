<%- include('partials/header.ejs') %>

<% if (locals.postID) { %>
    <h1>Edit Post</h1>
    <form action="/update" method="post">
        <input type="text" name="title" placeholder="Title" value="<%= title %>" required>
        <textarea name="content" id="content" cols="30" rows="18" placeholder="Content"><%= content %></textarea>
        <input hidden type="text" name="index" value="<%= postID %>">
        <input type="submit" value="Update Post">
    </form>
<% } else { %>
    <h1>Create Post</h1>
    <form action="/save" method="post">
        <input type="text" name="title" placeholder="Title" required>
        <textarea name="content" id="content" cols="30" rows="18" placeholder="Content"></textarea>
        <input type="submit" value="Create Post">
<% }  %>

<%- include("partials/footer.ejs") %>